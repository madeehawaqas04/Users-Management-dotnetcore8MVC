@model AuthAuthorization.Models.Patient

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-4">
    <div class="col-8  mx-auto border p-3 mt-4 rounded-3">
        <div class="row pt-4">
            <div class="col-10">
                <h2 class="text-primary">Are you sure you want to delete this?</h2>
            </div>

            <div class="col-2 text-end">

                <a asp-action="Index" asp-controller="Patients" class="btn btn-secondary">
                    Back
                </a>
            </div>
        </div>

        <hr />


<div>
  
    <dl class="row">
        <dt class = "col-sm-2">
         Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
           Created Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDateTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
                <div class="text-end">
        <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
    </form>
</div>

</div>
</div>
