@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-6 col-md-8  mx-auto ">

<div class="border p-3 mt-4 rounded-3">

    <div class="row pb-2">
        <h2 class="text-primary">Add Roles</h2>
        <hr />
    </div>
<form method="post" asp-action="AddRole" 
asp-controller="RoleManager">
                <div class="input-group mb-3">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-primary">Add New Role</button>
        </span>
    </div>
</form>

            <table class="table table-bordered table-striped" id="tbRoles">
    <thead>
        <tr>
         @*    <th>Id</th> *@
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
              @*   <td>@role.Id</td> *@
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
           
        </div>
    </div>
</div>


     